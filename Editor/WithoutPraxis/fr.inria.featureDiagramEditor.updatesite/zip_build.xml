<!-- This script add the new update site zip in fr.inria.featureDiagramEditor.zipped_update/zip -->
<project name="fr.inria.featureDiagramEditor.updatesite" default="gather.bin.parts" basedir=".">

	<!-- This script patches the way the plugin is created, otherwise some files are not added in the distribution and make it incorrect 
	-->
	<target name="gather.bin.parts" >
		<tstamp>
			<format property="TODAY_UK" pattern="d-MMMM-yyyy" locale="en"/>
		</tstamp>
		<filter token="BUILD.DATE" value="${TODAY_UK}"/>
		<mkdir dir="mytemp"/>
		<copy todir="mytemp" failonerror="true" overwrite="true">
			<fileset dir="." includes="**" excludes="*zip_build.xml , *mytemp,fr.inria.featureDiagramEditor.praxisConstraints.tests.zip"/>
		</copy>
		<delete file="../fr.inria.featureDiagramEditor.zipped_update/zip/fr.inria.featureDiagramEditor.updatesite.zip"/>
		<zip destfile="../fr.inria.featureDiagramEditor.zipped_update/zip/fr.inria.featureDiagramEditor.updatesite.zip" basedir="mytemp" includes="**" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="mytemp"/>
	</target>

</project>
